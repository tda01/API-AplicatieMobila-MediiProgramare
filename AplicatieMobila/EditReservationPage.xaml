<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicatieMobila.EditReservationPage"
             Title="Edit Reservation">
    <StackLayout Padding="20">

 
        <Picker x:Name="clientPicker" Title="Choose a client"/>

        <Label Text="Number of People" FontAttributes="Bold" />
        <Entry Placeholder="Enter Number of People" x:Name="numberOfPeopleEntry" />

        <Label Text="Reservation Date" FontAttributes="Bold" />
        <DatePicker x:Name="reservationDatePicker" />


        <Button Text="Save" Clicked="OnSaveClicked" />
        <Button Text="Delete" Clicked="OnDeleteClicked" />

    </StackLayout>

</ContentPage>