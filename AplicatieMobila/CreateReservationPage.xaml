<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicatieMobila.CreateReservationPage"
             Title="Create Reservation">
    <StackLayout Margin="20">

        <Picker x:Name="clientPicker" Title="Select a client" />

        <Label Text="Number of People:" />
        <Entry x:Name="numberOfPeopleEntry" Placeholder="Enter number of people" />

        <Label Text="Reservation Date:" />
        <DatePicker x:Name="reservationDatePicker" />

        <Button Text="Save Reservation" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>